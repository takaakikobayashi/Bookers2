<!DOCTYPE html>
<html>
<nav class="navbar navbar-inverse">
    <div class="container">
  <div class="navbar-header">
            <a class="navbar-brand">Bookers</a>
            <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </div>
</div>

  <body>
    <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
    <% if notice %>
    <p class="alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
    <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <% if user_signed_in? %>
    <li class="">
<span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to 'Home', show_user_path(current_user.id) %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= link_to 'Users', users_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-book" aria-hidden="true"></span><%= link_to 'Books', books_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span><%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
    <li class="">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span><%= link_to 'Home', show_user_path(current_user.id) %><%= link_to 'Home', home_index_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
<%= link_to 'About', home_about_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span><%= link_to "sign up", new_user_registration_path %>
      </li>
      <li class="">
        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span><%= link_to "log in", new_user_session_path %>
      </li>
    <% end %>
  </ul>
</div>
  </body>
</nav>
<%= yield %>
</html>
