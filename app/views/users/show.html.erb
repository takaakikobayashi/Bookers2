<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-3">
<h1>User info</h1>

<%= attachment_image_tag @user, :image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %>

<table class="table">
<tr><td>name</td><td><%= @user.name %></td></tr>
<tr><td>introduction</td><td><%= @user.introduction %></td></tr>
</table>

<%=link_to "Edit", edit_user_path %>
<%= button_tag( class: "btn btn-default btn-sm") do %>
  <%= content_tag :span, "", class: "glyphicon glyphicon-wrench" %>
<% end %>

</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :opinion %><br>
 
    <%= button_tag( class: "btn btn-primary") do %>
    <%= content_tag :span, 'Create Book', class: "btn btn-primary" %>
    <%= f.submit('Create Book',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
    <% end %>
 
<% end %>
</div>

<div class="col-lg-9">
    <h1>Books</h1>

<table class="table table-striped">
    <thead>
    <tr>
      <th><p></p></th>
      <th><p>Title</p></th>
      <th><p>Opinion</p></th>
    </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
    <tr>
      <td><%= attachment_image_tag book.user, :image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %></td>
      <td><span><%= book.title %></span></td>
      <td><span><%= book.opinion %></span></td>
    </tr>
   <% end %>
   </tbody>
   </table>
 </div>
</div>
</div>