 <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

 <div class="container">
  <div class="row">
    <div class="col-lg-3">

 <h1>User info</h1>

<%= attachment_image_tag @user_id, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %>

<table class="table">
<tr><td>name</td><td><%= @user_id.name %></td></tr>
<tr><td>introduction</td><td><%= @user_id.introduction %></td></tr>
</table>

<%= link_to edit_user_path(@user_id), class: "btn btn-default btn-sm" do %>
<i class="glyphicon glyphicon-wrench"></i>
<span></span>
<% end %>

</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :opinion %><br>
 
    <%= f.submit('Create Book',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
    <% end %>
 
</div>

<div class="col-lg-9">
 <h1>Users</h1>

<table class="table table-striped">
    <thead>
    <tr>
   	  <th><p>image</p></th>
      <th><p>name</p></th>
      <th><p></p></th>
    </tr>
    </thead>
<% @users.each do |user| %>
   <tbody>
    <tr>
   <span><td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %></td></span>
   <td><span><%= user.name %></span></td>
   <td><%=link_to "Show", show_user_path(user.id) %></td>
   </tr>

    <% end %>
</tbody>
</table>
</table>