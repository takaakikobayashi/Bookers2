 <div class="container">
  <div class="row">

    <% if @book.errors.any? %>
 <div id="error_explanation">
    <p><%= @book.errors.count %>errors prohibited this obj from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="col-lg-3">
 <h1>User info</h1>

<%= attachment_image_tag @user_id, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %>

<table class="table">
<tr><td>name</td><td><%= @user_id.name %></td></tr>
<tr><td>introduction</td><td><%= @user_id.introduction %></td></tr>
</table>

<%= link_to edit_user_path(@user_id), class: "btn btn-default btn-block" do %>
<i class="glyphicon glyphicon-wrench"></i>
<span></span>
<% end %>

</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, :size=> "36X10" %>
 
    <h4>Opinion</h4>
    <%= f.text_area :body, :size=> "35X10" %><br>
 
    <%= f.submit('Create Book',class: 'btn btn-primary btn-block') %>
    <% end %>
 
</div>

<div class="col-lg-9">
 <h1>Books</h1>

<table class="table table-hover">
   	<thead>
   	<tr>
   	  <th><p></p></th>
      <th><p>Title</p></th>
      <th><p>Opinion</p></th>
    </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
    <tr>
     <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg",size:'50x50' %></td>
      <td><span>

      	<%=link_to book.title, book_path(book.id)  %>
      		
      	</span></td>
      <td><span><%= book.body %></span></td>
    </tr>
    </tbody>
    <% end %>
  </table>
  <p class="text-right">CopyRight Infratop.inc</p>
</div>