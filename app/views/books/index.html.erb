 <div class="container">
  <div class="row">

    <div class="col-lg-3">
 <h1>User info</h1>

<%= attachment_image_tag @user_id, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %>

<table class="table">
<tr><td>name</td><td><%= @user_id.name %></td></tr>
<tr><td>introduction</td><td><%= @user_id.introduction %></td></tr>
</table>

<%= link_to edit_user_path(@user_id), class: "btn btn-default btn-sm" do %>
<i class="glyphicon glyphicon-wrench"></i>
<span></span>
<% end %>

</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<%= render 'layouts/error_messages', model: f.object %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Opinion</h4>
    <%= f.text_area :opinion %><br>
 
    <%= f.submit('Create Book',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
    <% end %>
 
</div>

<div class="col-lg-9">
 <h1>Books</h1>

<table class="table table-striped">
   	<thead>
   	<tr>
   	  <th><p></p></th>
      <th><p>Title</p></th>
      <th><p>Opinion</p></th>
    </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
    <tr>
     <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %></td>
      <td><span>

      	<%=link_to book.title, book_path(book.id)  %>
      		
      	</span></td>
      <td><span><%= book.opinion %></span></td>
    </tr>
    </tbody>
    <% end %>
  </table>