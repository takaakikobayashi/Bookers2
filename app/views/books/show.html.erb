<h1>Book detail</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table>
  <% @book.each do |book| %>
  <tbody>
  <tr>
 <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %></td>
<td><p><%= book.title %></p></td>
<td><p><%= book.opinion %></p></td>
<% if book.user_id == current_user.id %>
<td><%=link_to "Edit", edit_book_path(book.id) %></td>
<td><%=link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
<% end %>
</tr>
<tfoot>
	<tr>
		<td><%=link_to book.user.name, show_user_path %></td>
	    <td></td>
	</tr>
</tfoot>
<% end %>
</tbody>
</table>