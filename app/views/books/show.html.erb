<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

 <div class="container">
  <div class="row">
    <div class="col-lg-3">

     <h1>User info</h1>

     <%= attachment_image_tag @user_id, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>

     <table class="table">
      <tr><td>name</td><td><%= @user_id.name %></td></tr>
      <tr><td>introduction</td><td><%= @user_id.introduction %></td></tr>
     </table>

     <%= link_to edit_user_path(@user_id), class: "btn btn-default btn-block" do %>
     <i class="glyphicon glyphicon-wrench"></i>
     <span></span>
     <% end %>

     </table>

     <h2>New book</h2>

     <%= form_for(@newbook) do |f| %>
 
     <h4>Title</h4>
     <%= f.text_field :title, :size=> "36X10" %>
 
     <h4>Opinion</h4>
     <%= f.text_area :body, :size=> "35X10" %><br>
 
     <%= f.submit('Create Book',class: 'btn btn-primary btn-block') %>
     <% end %>
 
    </div>

   <div class="col-lg-9">

    <h1>Book detail</h1>

   <table class="table">
  
    <tbody>
     <tr>
     <td><%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: "jpeg", class: "img-square pull-left image", fallback: "no_image.jpg" %></td>
     <td><p><%= @book.title %></p></td>
     <td><p><%= @book.body %></p></td>
     <% if @book.user_id == current_user.id %>
     <td><%=link_to "Edit", edit_book_path(@book.id) %></td>
     <td><%=link_to "Destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
     <% end %>
     </tr>
     <tfoot>
	 <tr>
	 <td><%=link_to @user.name, show_user_path %></td>
	    <td></td>
	 </tr>
     </tfoot>
   </tbody>
   </table>
   </div>
  </div>
 </div>